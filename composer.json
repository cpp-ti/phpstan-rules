{
    "name": "cppti/phpstan-rules",
    "description": "PHPStan custom rules",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^8.2",
        "phpstan/phpstan": "^2.0",
        "spaze/phpstan-disallowed-calls": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Cppti\\PHPStanRules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cppti\\PHPStanRules\\Tests\\": "tests/",
            "App\\Tests\\": "tests/Rules/data/",
            "App\\Services\\": "tests/Rules/data/",
            "Tests\\": "tests/Rules/data/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    }
}
